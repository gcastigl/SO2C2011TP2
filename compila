#!/bin/sh
cd ./bin
rm -rf *
nasm -f aout ../src/libasm.asm -o libasm.o
nasm -f aout ../src/kstart.asm -o kstart.o
nasm -f aout ../src/loader.asm -o kstart.o
gcc -m32 -g -c ../src/main.c -o main.o 						-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/libc.c  -o libc.o 					-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/driver/video.c -o video.o 			-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/driver/keyboard.c -o keyboard.o 		-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/lib/string.c -o string.o 				-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/lib/stdlib.c -o stdlib.o 				-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/lib/math.c -o math.o 					-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/lib/printf.c -o printf.o 				-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/lib/scanf.c -o scanf.o 				-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/interrupts.c -o interrupts.o 			-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/io.c -o io.o 							-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/shell.c -o shell.o 					-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/command.c -o command.o 				-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/tty.c -o tty.o 						-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/driver/videoUtils.c -o videoUtils.o 	-fno-builtin -fno-stack-protector -Wall
gcc -m32 -g -c ../src/user.c -o user.o		 				-fno-builtin -fno-stack-protector -Wall
ld -melf_i386 -T ../src/link.ld -o kernel.bin main.o kstart.o libc.o libasm.o video.o interrupts.o \
	keyboard.o io.o stdlib.o string.o shell.o command.o math.o tty.o printf.o scanf.o videoUtils.o user.o
